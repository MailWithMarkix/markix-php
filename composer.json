{
    "name": "markix/markix-php",
    "description": "PHP library for the Markix API.",
    "type": "library",
    "keywords": [
        "markix",
        "transactional email",
        "api"
    ],
    "license": "MIT",
    "homepage": "https://www.markix.com/",
    "authors": [
        {
            "name": "Markix and contributors",
            "homepage": "https://github.com/MailWithMarkix/markix-php/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "Markix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Markix\\": [
                "tests/",
                "tests/Markix/"
            ]
        }
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/http": "^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
